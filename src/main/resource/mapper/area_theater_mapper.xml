<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wwwy.liuxin.arth.dto.AreaTheaterMapper">
    <resultMap id="AreaTheaterResultMap" type="com.wwwy.liuxing.arth.dto.AreaTheaterDTO">
        <id property="arThId" column="ar_th_id" javaType="java.lang.Integer"/>
        <result property="fkArId" column="fk_area_id" javaType="java.lang.Integer"/>
        <result property="fkThId" column="fk_theater_id" javaType="java.lang.Integer"/>

    </resultMap>

    <select id="queryAll" resultMap="AreaTheaterResultMap">
        SELECT ar_th_id,fk_area_id,fk_theater_id FROM tb_area_theater
    </select>



    <select id="queryAreaById" resultMap="AreaTheaterResultMap">
        SELECT area_id,area_name,fk_city_id FROM tb_area WHERE area_id=#{areaId}
    </select>

    <insert id="insertArea">
        INSERT INTO tb_area(area_name,fk_city_id)VALUES (#{areaName},#{fkCityId})
    </insert>

    <delete id="deleteArea">
        DELETE FROM tb_area WHERE area_id=#{areaId}
    </delete>

    <update id="updateArea">
        UPDATE tb_area
        <trim prefix="set" suffixOverrides=",">
            <if test="areaName!=null">area_name=#{areaName},</if>
            <if test="fkCityId!=null">fk_city_id=#{fkCityId},</if>
        </trim>
        WHERE area_id=#{areaId}
    </update>

    <select id="queryAny" resultMap="AreaTheaterResultMap">
        SELECT a.area_id,a.area_name,a.fk_city_id,ci.city_id,ci.city_name FROM tb_area a JOIN tb_city ci ON a.fk_city_id=ci.city_id
        WHERE area_id LIKE concat(concat('%',#{anyInfo}),'%')
        OR area_name LIKE concat(concat('%',#{anyInfo}),'%')
    </select>

    <!--批量删除-->
    <delete id="batchDeleteAreas" parameterType="int">
        delete from tb_area where area_id in
        <foreach item="areaId" collection="array" open="(" separator="," close=")">
            #{areaId}
        </foreach>
    </delete>

</mapper>